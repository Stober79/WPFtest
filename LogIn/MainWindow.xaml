<Window x:Class="LogIn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogIn"
        mc:Ignorable="d"
        Title="MainWindow" Height="546" Width="847" WindowState="Maximized">

    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Source="D:\Projects\WPFtest\LogIn\Image\window.jpg" Stretch="Fill" Grid.Column="0" Grid.Row="0" Margin="0,0,0,0" OpacityMask="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
        <Button x:Name="Close" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Close" Click="Close_Click"/>
        <Button x:Name="Logout" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Logout" Click="Logout_Click" Height="45" Width="92"/>
        <Button x:Name="LisOfUsers" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Users" Click="LisOfUsers_Click"  Height="45" Width="92"/>

    </Grid>
</Window>
